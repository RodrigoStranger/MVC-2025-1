<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">{{libro.titulo}}</h2>
                <div>
                    <a href="/books/{{libro.id}}/edit" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <form action="/books/{{libro.id}}?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" 
                                onclick="return confirm('¿Estás seguro de eliminar este libro?')">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-4 fw-bold">Autor:</div>
                    <div class="col-md-8">{{libro.autor}}</div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-4 fw-bold">Año de Publicación:</div>
                    <div class="col-md-8">{{libro.anio_publicacion}}</div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-4 fw-bold">Género:</div>
                    <div class="col-md-8">
                        {{libro.genero}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 fw-bold">Fecha de Creación:</div>
                    <div class="col-md-8">{{formatDate libro.fecha_creacion}}</div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <a href="/books" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>
